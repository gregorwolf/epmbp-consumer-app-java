{
  "name": "epmbp",
  "version": "1.0.0",
  "description": "Generated by cds-services-archetype",
  "license": "ISC",
  "repository": "<Add your repository here>",
  "scripts": {
    "build": "cds build/all --clean",
    "edmx2csn": "node_modules/@sap/edmx2csn/bin/edmx2csn.js -i srv/external/ZEPM_BP_SRV.edmx.xml -o srv/external/csn/ZEPM_BP_SRV.json",
    "setdestination": "export destinations='[{name: \"NPL\", url: \"http://localhost:3000/v2\"}]'",
    "schema": "cds compile srv --to sql > srv/src/main/resources/schema.sql",
    "deploy": "cds deploy",
    "start": "mvn spring-boot:run",
    "start:cloud": "mvn spring-boot:run -Dspring-boot.run.profiles=cloud"
  },
  "dependencies": {
    "@sap/cds": "^3.0.0",
    "hdb": "^0.17.1"
  },
  "devDependencies": {
    "sqlite3": "^4.1.1",
    "@sap/edmx2csn": "^1.0.8",
    "@sap/hdi-deploy": "^3.11.6"
  },
  "cds": {
    "build": {
      "target": "."
    },
    "requires": {
      "db": {
        "kind": "sqlite",
        "model": [
          "db",
          "srv"
        ],
        "[production]": {
          "kind": "hana"
        }
      }
    },
    "odata": {
      "version": "v4"
    }
  }
}
